    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Django",
            "type": "python",
            "request": "launch",
            "envFile": "${workspaceFolder}/.env",
            "env": {
                "SQL_HOST": "localhost",
                "REDIS_DB_HOST": "localhost"
            },
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "runserver",
                "8001"
                // "makemigrations",
                // "migrate"
            ],
            "django": true,
            "justMyCode": false
        },
        {
            "name": "Python: Celery Worker",
            "type": "python",
            "request": "launch",
            "module": "celery",
            "console": "integratedTerminal",
            "args": [
                "-A",
                "main",
                "worker",
                "-l",
                "info",
                "-P",
                "solo",
            ]
        },
        {
            "name": "Python: Celery Beat",
            "type": "python",
            "request": "launch",
            "module": "celery",
            "console": "integratedTerminal",
            "args": [
                "-A",
                "main",
                "beat",
                "-l",
                "info",
                "-P",
                "solo",
            ]
        }
    ]
}